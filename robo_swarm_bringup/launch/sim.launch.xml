<launch>
    <arg name="use_sim_time" default="true"/>

    <let name="urdf_path" 
         value="$(find-pkg-share robo_swarm_description)/urdf/my_robot.urdf.xacro" />
    <let name="bridge_config_path"
         value="$(find-pkg-share robo_swarm_bringup)/config/gazebo_bridge.yaml" />

    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="-r empty.sdf" />
    </include>

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <node pkg="ros_gz_sim" exec="create" args="-topic robot_description -name my_robot -z 0.1" />

    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file" value="$(var bridge_config_path)" />
    </node>
    
    <node pkg="rviz2" exec="rviz2" output="screen" />
</launch>